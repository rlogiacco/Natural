<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.agileware.natural.cucumber.feature"
      label="Cucumber Editor"
      version="0.7.6.qualifier"
      provider-name="Roberto Lo Giacco">

   <description url="https://github.com/rlogiacco/bdd-eclipse/wiki">
      Cucumber feature file editor providing syntax highlighting, auto
completion, feature outline, grammar validation and hyperlink
to corresponding Java annotated classes.
   </description>

   <copyright>
      (c) Copyright Roberto Lo Giacco &lt;rlogiacco@gmail.com&gt; and others 2012.  All rights reserved.
   </copyright>

   <license url="http://www.eclipse.org/legal/epl-v10.html">
      %license
   </license>

   <url>
      <discovery label="Xtext Update Site" url="http://download.eclipse.org/modeling/tmf/xtext/updates/composite/releases/"/>
   </url>

   <requires>
      <import plugin="org.eclipse.xtext" version="2.1.0" match="greaterOrEqual"/>
      <import plugin="org.apache.log4j" version="1.2.15" match="greaterOrEqual"/>
      <import plugin="org.eclipse.xtext.util"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.emf.common"/>
      <import plugin="org.antlr.runtime"/>
      <import plugin="org.eclipse.xtext.common.types"/>
      <import plugin="org.eclipse.jdt.core" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.apache.commons.logging"/>
      <import plugin="org.eclipse.xtext.xbase.lib"/>
      <import plugin="org.eclipse.xtext.ui"/>
      <import plugin="org.eclipse.ui.editors" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.ide" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.xtext.ui.shared"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.xtext.builder"/>
      <import plugin="org.eclipse.xtext.common.types.ui"/>
      <import plugin="org.eclipse.xtext.ui.codetemplates.ui"/>
      <import plugin="org.eclipse.compare"/>
      <import plugin="org.eclipse.jdt.ui" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.ide" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.resources" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="com.google.guava" version="10.0.1" match="greaterOrEqual"/>
      <import plugin="com.google.inject" version="3.0.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="org.agileware.natural.cucumber"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.agileware.natural.cucumber.ui"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.agileware.natural.common"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
